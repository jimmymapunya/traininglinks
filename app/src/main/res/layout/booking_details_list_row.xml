<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/txtTutorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutor: Jimmy Mapunya"
        android:textColor="#424242"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <ImageView
        android:id="@+id/txtSubjectimage"
        android:layout_width="25dp"
        android:layout_height="18dp"
        android:src="@drawable/expand"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        android:contentDescription="@string/str_image"
        android:layout_alignTop="@+id/txtTutorName" />


    <TextView android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Subject: English"
        android:id="@+id/txtSubject"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/txtTutorName"
        android:layout_alignStart="@+id/txtTutorName" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtSubject"
        android:layout_below="@+id/txtSubject"
        android:layout_marginTop="5dp"
        android:text="Booked" />

    <TextView
        android:id="@+id/txtDateTime"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:paddingTop="10dp"
        android:textSize="10dp"
        android:text="@string/str_courtDate"
        android:layout_below="@+id/txtStatus"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="59dp" />


</RelativeLayout>