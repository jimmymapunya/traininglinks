<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtCaseNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_caseNo"
        android:padding="10dp"
        android:textColor="#424242"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="18dp"
        android:src="@drawable/expand"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        android:contentDescription="@string/str_image"
        android:layout_alignTop="@+id/txtCaseNo" />

    <TextView android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/str_offense"
        android:id="@+id/txtCaseContent"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/txtCaseNo"
        android:layout_alignStart="@+id/txtCaseNo" />

    <TextView
        android:id="@+id/txtDateCreated"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:text="@string/str_courtDate"
        android:layout_below="@+id/txtCaseContent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="59dp" />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/txtDateCreated"
        android:layout_alignParentStart="true">
        <View
            android:id="@+id/investigate"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/process_status_formatted"
            android:textColor="#fff"
            android:layout_marginStart="10dp"
            android:paddingTop="210dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_alignParentStart="true" />
        <View
            android:id="@+id/investigateLine"
            android:layout_width="35dp"
            android:layout_height="2dp"
            android:background="#ccc"
            android:textColor="#fff"
            android:paddingTop="210dp"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:layout_marginStart="35dp" />

        <View
            android:id="@+id/arrested"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/process_status_formatted"
            android:textColor="#fff"
            android:paddingTop="210dp"
            android:layout_marginStart="70dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/arrestLine"
            android:layout_width="35dp"
            android:layout_height="2dp"
            android:background="#ccc"
            android:textColor="#fff"
            android:paddingTop="210dp"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:layout_marginStart="95dp" />
        <View
            android:id="@+id/bail"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/process_status_formatted"
            android:textColor="#fff"
            android:paddingTop="210dp"
            android:layout_marginStart="130dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/bailLine"
            android:layout_width="35dp"
            android:layout_height="2dp"
            android:background="#ccc"
            android:textColor="#fff"
            android:paddingTop="210dp"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:layout_marginStart="155dp" />
        <View
            android:id="@+id/trial"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/process_status_formatted"
            android:textColor="#fff"
            android:paddingTop="210dp"
            android:layout_marginStart="190dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/trialLine"
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="#ccc"
            android:textColor="#fff"
            android:paddingTop="210dp"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:layout_marginStart="215dp" />

        <View
            android:id="@+id/verdict"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/process_status_formatted"
            android:textColor="#fff"
            android:paddingTop="210dp"
            android:layout_marginStart="250dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/verdictLine"
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="#ccc"
            android:textColor="#fff"
            android:paddingTop="210dp"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:layout_marginStart="275dp" />

        <View
            android:id="@+id/aquit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/process_status_formatted"
            android:textColor="#fff"
            android:paddingTop="210dp"
            android:layout_marginStart="310dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/aquitLine"
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="#ccc"
            android:textColor="#fff"
            android:paddingTop="210dp"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:layout_marginStart="335dp" />

        <View
            android:id="@+id/sentence"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/process_status_formatted"
            android:textColor="#fff"
            android:paddingTop="210dp"
            android:layout_marginStart="370dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrest"
            android:textSize="12dp"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignStart="@+id/arrested"
            android:layout_alignTop="@+id/textView5" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignStart="@+id/verdict"
            android:text="Verdict"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignStart="@+id/aquit"
            android:text="Aquit"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sentence"
            android:textSize="12dp"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toEndOf="@+id/textView6"
            android:layout_marginStart="18dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bail hearing"
            android:textSize="12dp"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignEnd="@+id/bailLine" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trial"
            android:textSize="12dp"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_toEndOf="@+id/textView5"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/investigate"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_toStartOf="@+id/textView"
            android:text="Investigate"
            android:textSize="12dp"
            android:layout_alignEnd="@+id/investigate" />

    </RelativeLayout>

</RelativeLayout>