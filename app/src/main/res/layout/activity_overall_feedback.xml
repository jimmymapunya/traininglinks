<?xml version="1.0" encoding="utf-8"?>
<!--
    Created by ThatoM on 2017/07/10.
    Layout for the class for overall feedback
 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="bottom"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtFeedbackQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="13dp"
                        android:text="How do you feel about the help you just received?"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtStarRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtFeedbackQuestion"
                        android:textAlignment="center"
                        android:layout_marginTop="13dp"
                        android:text="Please give it a star rating" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtStarRating"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        tools:layout_gravity="center_horizontal"
                        android:numStars="5"
                        android:stepSize="0.5" />

                    <CheckBox
                        android:id="@+id/checkBoxOF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/checkBox5OF"
                        android:layout_below="@+id/checkBox5OF"
                        android:text="Time spent on one case is too long" />

                    <CheckBox
                        android:id="@+id/checkBox2OF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time spent on one case is too long"
                        android:layout_centerVertical="true"
                        android:layout_alignStart="@+id/checkBox4OF" />

                    <CheckBox
                        android:id="@+id/checkBox5OF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/checkBox4OF"
                        android:layout_below="@+id/checkBox4OF"
                        android:text="Time spent on one case is too long" />

                    <CheckBox
                        android:id="@+id/checkBox4OF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/txtStarRating"
                        android:layout_below="@+id/checkBox2OF"
                        android:text="Time spent on one case is too long" />


                    <EditText
                        android:id="@+id/txtOverallFeedbackEditText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext_formatted"
                        android:ems="10"
                        android:hint=" Additional comments"
                        android:inputType="textPersonName"
                        android:textAlignment="viewStart"
                        android:layout_below="@+id/checkBox4OF"
                        android:layout_marginTop="10dp"
                        android:layout_alignEnd="@+id/btnSubmitOF"
                        android:layout_alignStart="@+id/checkBox4OF" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="bottom"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btnSubmitOF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/emergencybutton"
                        android:text="@string/strSubmitFeedback"
                        android:textColor="#fff"
                        android:layout_above="@+id/btnNotNowOF"
                        android:layout_marginBottom="5dp" />

                    <Button
                        android:id="@+id/btnNotNowOF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/emergencybutton"
                        android:text="@string/strNotNow"
                        android:textColor="#fff" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <fragment
            android:id="@+id/frag_nav_drawer"
            android:name="mobilecrimereportingapp.za.ijs.gov.crimereportingapp.view.NavigationDrawerFrag"
            android:layout_width="@dimen/nav_drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:layout="@layout/fragment_navigation_drawer" />

    </android.support.v4.widget.DrawerLayout>

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar" />


</LinearLayout>
