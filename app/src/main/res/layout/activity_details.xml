<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:overScrollMode="ifContentScrolls"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="30dp"
                    android:background="#fff">

                    <TextView
                        android:id="@+id/txtCaseNo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:inputType="text"
                        android:paddingTop="5dp"
                        android:text="208025236"
                        android:textColor="#696969"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/relativeLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="10dp"
                    android:background="#eee">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_case"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:id="@+id/txtOffense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accused of attempted murder on 16-Mar-2017"
                        android:textSize="16dp"
                        android:paddingLeft="60dp"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"

                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="#fff">
                    <Spinner
                        android:id="@+id/processNamesSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:background="@drawable/bg_spinner_style"
                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/txtProcessDesc"
                        android:layout_marginTop="15dp" />
                    <TextView
                        android:id="@+id/txtProcessDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="16dp"
                        android:background="#eee"
                        android:padding="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/processNamesSpinner"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="#fff"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txtA1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Victim"
                        android:textStyle="bold"
                        android:paddingLeft="30dp"
                        android:textSize="16dp"
                        android:layout_alignStart="@+id/txtAccused"
                        android:layout_alignEnd="@+id/txtAccused"
                        android:layout_alignTop="@+id/txtA2" />

                    <TextView
                        android:id="@+id/txtA2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:paddingRight="30dp"
                        android:layout_alignBottom="@+id/textView15"
                        android:text="Accused"
                        android:textSize="16dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignTop="@+id/textView15"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:id="@+id/txtAccused"
                        android:layout_width="130dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/txtA1"
                        android:background="@drawable/edit_text_style"
                        android:text="Albert Rhulani Mathebula"
                        android:textSize="16dp"
                        android:layout_alignParentBottom="true" />

                    <TextView
                        android:id="@+id/txtVictim"
                        android:layout_width="130dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:layout_alignBottom="@+id/textView15"
                        android:text="Sebendzile Mabunda"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:layout_below="@id/txtA2"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/edit_text_style"
                        android:layout_alignTop="@+id/textView15"
                        android:layout_alignParentEnd="true" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="#eee">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="48dp"
                        android:paddingRight="160dp"
                        android:text="Inbox"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txtInbox"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:textAlignment="center"
                        android:layout_marginBottom="5dp"
                        android:layout_alignTop="@+id/textView10"
                        android:layout_marginRight="20dp"
                        android:layout_toEndOf="@+id/textView10"
                        android:background="@drawable/messages_formatted"
                        android:text="3"
                        android:padding="2dp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="16dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:background="#eee">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="48dp"
                        android:text="Notifications"
                        android:paddingRight="105dp"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtNotification"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toEndOf="@+id/textView11"
                        android:background="@drawable/messages_formatted"
                        android:padding="2dp"
                        android:text="7"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_alignTop="@+id/textView11" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativeLayout18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentStart="true"

                    android:background="#eee">

                    <Button
                        android:id="@+id/btnNavigateToCourt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Navigete to court"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/btnProvideFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnNavigateToCourt"
                        android:layout_marginBottom="15dp"
                        android:text="Provide Feedback"
                        android:textColor="#fff" />

                </RelativeLayout>



            </LinearLayout>

        </ScrollView>

        <fragment
            android:id="@+id/frag_nav_drawer"
            android:name="mobilecrimereportingapp.za.ijs.gov.crimereportingapp.view.NavigationDrawerFrag"
            android:layout_width="@dimen/nav_drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:layout="@layout/fragment_navigation_drawer" />

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>

